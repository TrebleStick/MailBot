<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.extcord.jg3215.mailbot">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".CollectionMode.MainActivity_Collection1"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CollectionMode.DetailsActivity_Collection1"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CollectionMode.MainActivity_Collection1"/>
        </activity>

        <activity
            android:name=".CollectionMode.LockerActivity_Collection1"
            android:screenOrientation="landscape">
            <meta-data
                android:value="android.support.PARENT_ACTIVITY"
                android:name=".CollectionMode.MainActivity_Collection1"/>
        </activity>

        <activity
            android:name=".CollectionMode.EndActivity_Collection1"
            android:screenOrientation="landscape">
            <meta-data
                android:value="android.support.PARENT_ACTIVITY"
                android:name=".CollectionMode.MainActivity_Collection1"/>
        </activity>
    </application>
</manifest>